<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lookthings.users.dao.AssociationRolePermisDao">
    <select id="getRolesNameByUserName" resultType="String">
        SELECT
        r.role_name
        FROM t_user u,t_role r
        WHERE r.id=u.role_id
        AND u.user_name =#{userName}
    </select>

    <!-- 对表格中字段进行映射操作 -->
    <resultMap id="userRoleLinkVO" type="com.lookthings.users.vo.UserRoleLinkVO">
        <id property="roleId" column="role_id" jdbcType="INTEGER"/>
        <id property="roleName" column="role_name" jdbcType="VARCHAR"/>
    </resultMap>

    <select id="getRolesByUserId" resultType="Integer" resultMap="userRoleLinkVO">
        SELECT
        role_name,role_id
        FROM t_user u,t_role r
        WHERE r.id=u.role_id
        AND u.id =#{userId}
    </select>

    <select id="getPermissionsByUserName" resultType="String">
        SELECT r.role_name
        FROM t_user u,t_role r,t_permission p
        WHERE u.role_id = r.id
        AND p.role_id = r.id
        AND u.user_name=#{userName}
    </select>

    <select id="getPermissionByRoleId" resultType="java.lang.Integer">
        SELECT
        tp.id,tp.permission_name
        FROM
        t_permission tp,t_role tr,t_role_permis_association trpl
        WHERE tp.id=trpl.permission_id
        AND tr.id=trpl.role_id
        AND tr.id=#{roleId}
    </select>

    <delete id="deleteRolePermsByRoleId">
        DELETE FROM t_role_permis_association WHERE role_id=#{roleId}
    </delete>

    <insert id="insertRolePermsLink" parameterType="java.util.List">
        INSERT
        ignore
        INTO
        t_role_permis_association (gmt_create,gmt_modified,role_id,permission_id)
        VALUES
        <foreach collection="list" item="rolePerms" index="index" separator=",">
            (CURRENT_TIME,CURRENT_TIME,#{rolePerms.roleId},#{rolePerms.permissionId})
        </foreach>
    </insert>
</mapper>